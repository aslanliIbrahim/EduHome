@model EventVM
@{
    ViewData["Title"] = "Details";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/img/event/@Model.Event.Image" alt="event-details">
                        <div class="event-date">
                            <h3>20 <span>jun</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>ADVANCE WED DEVELOPMENT WORKSHOP</h2>
                        <ul>
                            <li><span>time : </span>@Model.Event.StartTime - @Model.Event.EndTime</li>
                            <li><span>venue : </span>@Model.Event.Place</li>
                        </ul>
                        <p>@Model.Event.AboutMe</p>
                        <p>@Model.Event.AboutMe</p>
                        <p>@Model.Event.AboutMe</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @if (Model.Event.Spekears.Count()  > 0)
                            {
                                foreach (var item in Model.Event.Spekears)
                                {
                                    <div class="single-speaker">
                                        <div class="speaker-img">
                                            <img src="~/img/event/@item.Image" alt="speaker">
                                        </div>
                                        <div class="speaker-name">
                                            <h5>@item.Name</h5>
                                            <h5>@item.Surname</h5>
                                            <p>@item.Position </p>
                                        </div>
                                    </div>
                                }
                            }

                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                       
                            <ul>
                                <li><a href="#">Css</a></li>
                                <li><a href="#">Political Science (12)</a></li>
                                <li><a href="#">Micro Biology (08)</a></li>
                                <li><a href="#">HTML5 &amp; CSS3 (15)</a></li>
                                <li><a href="#">Web Design (20)</a></li>
                                <li><a href="#">PHP (23)</a></li>
                            </ul>
                        
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a asp-action="details" asp-controller="blog"><img src="~/img/event/@Model.Event.Image" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var item in Model.Blogs)
                        {
                            <div class="single-post mb-30">
                                <div class="single-post-img">
                                    <a asp-action="Details" asp-controller="Blog">
                                        <img style="width:100px;" src="~/img/blog/@item.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a href="blog-details.html">@item.Title</a></h4>
                                    <p> @item.Writer /  @item.DateTime.ToString("MMM dd")</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a asp-action="Details" asp-controller="Blog" class="mr-10 mb-10">course</a>
                            <a asp-action="Details" asp-controller="Blog" class="mr-10 mb-10">education</a>
                            <a asp-action="Details" asp-controller="Blog" class="mb-10">teachers</a>
                            <a asp-action="Details" asp-controller="Blog" class="mr-10">learning</a>
                            <a asp-action="Details" asp-controller="Blog" class="mr-10">university</a>
                            <a asp-action="Details" asp-controller="Blog">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
